;;;; Do-it library

(defmacro inc (var)
  `(set ,var (+ ,var 1)))

(defmacro for (init test step . body)
  `(block
     ,init
     (while ,test
       ,@body
       ,step)))

(defproc <= (x y)
  (not (> x y)))

(defproc >= (x y)
  (not (< x y)))

(defproc argument (args)
  (defvar temp (ref args))
  (set* args (+ temp 4))
  (ref temp))
