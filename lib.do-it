;;;; Do-it library

(defmacro inc (var)
  `(set ,var (+ ,var 1)))

(defmacro for (init test step . body)
  `(block
     ,init
     (while ,test
       ,@body
       ,step)))

(defproc <= (x y)
  (not (> x y)))

(defproc >= (x y)
  (not (< x y)))

(defproc display-line (str)
  (display str)
  (newline))

(defproc newline ()
  (putchar 10))
